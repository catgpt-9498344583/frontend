# See https://editorconfig.org for more information.

# Root of the file (make sure EditorConfig is not used in parent directories)
root = true

# Default settings
[*.{js,jsx,ts,tsx,css,html}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

# Specific settings for JavaScript, React, and TypeScript files
[*.{js,jsx,ts,tsx}]
js_indent_size = 2
jsx_indent_size = 2

# Settings for JSON files (use 2 spaces, no trailing whitespace)
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Settings for Markdown files
[*.md]
max_line_length = 80

# Settings for HTML files (indent with 2 spaces)
[*.html]
indent_style = space
indent_size = 2
